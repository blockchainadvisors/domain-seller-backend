<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>{{title}}</title>
  </head>

  <body style='margin:0;font-family:Arial, sans-serif'>
    <table style='border:0;width:100%;max-width:600px;margin:0 auto'>
      <!-- Header -->
      <tr style='background:#eeeeee'>
        <td
          style='padding:20px;color:#333333;text-align:center;font-size:24px;font-weight:bold'
        >
          {{app_name}}
        </td>
      </tr>

      <!-- Message Body -->
      <tr>
        <td style='padding:20px;color:#4a4a4a;font-size:16px;line-height:1.5'>
          {{text1}}
          {{user_name}},<br /><br />

          {{text2}}
          <strong>{{domain_name}}</strong>
          {{text3}}
          <br /><br />

          <strong> {{text4}}</strong>
          £{{user_bid_amount}}<br />
          <strong> {{text5}}:</strong>
          £{{current_highest_bid}}<br />
          <strong> {{text6}}</strong>
          {{auction_end_time}}
          <br /><br />

          {{text7}}
        </td>
      </tr>

      <!-- Call to Action Button -->
      <tr>
        <td style='text-align:center;padding:20px'>
          <a
            href='{{url}}'
            style='display:inline-block;padding:15px 25px;background:#00838f;color:#ffffff;font-size:16px;font-weight:bold;text-decoration:none;border-radius:5px'
          >
            Place a New Bid
          </a>
        </td>
      </tr>

      <!-- Footer -->
      <tr>
        <td style='padding:10px;color:#808080;font-size:12px;text-align:center'>
          {{text8}}<br />
          {{text9}}<br />
          {{text10}}
          {{app_name}}
          {{text11}}
        </td>
      </tr>
    </table>
  </body>
</html>